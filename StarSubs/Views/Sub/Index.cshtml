@using BLL;
@model OrderManipulation


<h2>Index</h2>

<form method="post">

    @Html.ListBoxFor(x => x.Type, Model.Types)
    @Html.ListBoxFor(x => x.Size, Model.Sizes)

    @foreach (var dealName in Model.Deals)
    {
        <label>
            @Html.RadioButtonFor(x => x.Deal, dealName)
            @dealName
        </label>
    }


    <button class="btn btn-primary" id="submit">Submit</button>
</form>